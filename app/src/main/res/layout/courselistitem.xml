<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="18dp"
        app:srcCompat="@drawable/book" />

    <TextView
        android:id="@+id/txt_coursecode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView3"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:textSize="25sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txt_credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_coursecode"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_toEndOf="@+id/txt_coursecode"
        android:layout_toRightOf="@+id/txt_coursecode"
        android:textSize="16sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txt_courename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignLeft="@+id/txt_coursecode"
        android:layout_alignStart="@+id/txt_coursecode" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="10dp"
        android:layout_height="22dp"
        app:srcCompat="@drawable/popup"
        android:layout_alignTop="@+id/txt_credits"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />


</RelativeLayout>